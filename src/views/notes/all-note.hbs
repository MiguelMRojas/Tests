<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >{{title}}
            <a href="/notes/edit/{{_id}}">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
              >
                <path
                  d="M20.41,7.41L17.17,4.17C16.972,3.972,16.722,3.872,16.47,3.872C16.218,3.872,15.968,3.972,15.77,4.17L13,7l7,7l3-3c0.391-0.391,0.391-1.023,0-1.414L20.41,7.41z M2.997,19.413c-0.266,0.266-0.441,0.605-0.497,0.974l-1.5,9c-0.073,0.438,0.056,0.892,0.357,1.193C1.508,30.894,1.754,31,2,31c0.238,0,0.476-0.091,0.658-0.275l9-9c0.391-0.391,0.391-1.023,0-1.414L4.412,16.585c-0.391-0.391-1.023-0.391-1.414,0L2.997,19.413z"
                ></path>
              </svg></a>

          </h4>
          <p>{{description}}</p>
          <p>{{nombres}}</p>
          <p>{{apellidos}}</p>
          <p>{{cedula}}</p>
          <p>{{genero}}</p>
          <p>{{edad}}</p>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-danger btn-block btn-sm">
              Delete
            </button></form>
        </div>
      </div>
    </div>
  {{/each}}
</div>